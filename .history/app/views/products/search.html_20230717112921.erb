<h1>Search Results</h1>

  <% search_keyword = params[:keyword].presence || "All products" %>
  <% search_category = Category.find(params[:category_id]).name if params[:category_id].present? %>

  <% if search_category.present? %>
    <p>Your search result for "<%= search_keyword %>" in "<%= search_category %>" found <%= @products.count %> results.</p>
  <% else %>
    <p>Your search result for "<%= search_keyword %>" found <%= @products.count %> results.</p>
  <% end %>

<% if @products.any? %>
  <% @products.each do |product| %>
    <h3><%= product.name %></h3>
    <!-- Display other product details as desired -->
  <% end %>
<% else %>
  <p>No products found.</p>
<% end %>
