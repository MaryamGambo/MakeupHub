<div>
  <% if product.image.attached? %>
    <p>Image:</p>
    <%= image_tag product.image %>
  <% end %>
  <h1><%= link_to product.name, product %></h1>
  <p><%= product.brand.name%></p>
  <p>Price: <%= product.price %></p>

  <p>On Sale: <%= product.on_sale_status ? 'Yes' : 'No' %></p>
</div>
