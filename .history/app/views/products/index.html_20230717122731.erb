<div>
    <% if @type %>
        <h2 class="title is-2">Products with Type: <%= @type.name %></h2>
        <% @products.each do |product| %>
            <%= render product%>
        <%end%>
    <% elsif @category %>
        <h2 class="title is-2">Products with Catgory: <%= @category.name %></h2>
        <% @products.each do |product| %>
            <%= render product%>
        <%end%>
    <% elsif @brand %>
        <h2 class="title is-2">Products with Brand: <%= @brand.name %></h2>
        <% @products.each do |product| %>
            <%= render product%>
        <%end%>
</div>
<h1>Products</h1>

