<!-- app/views/customers/edit.html.erb -->

<h1>Edit Customer Details</h1>
<%= form_for @customer do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :primary_address %>
    <%= f.text_field :primary_address %>
  </div>
  <div class="field">
    <%= f.label :alt_address %>
    <%= f.text_field :alt_address %>
  </div>
  <div class="field">
    <%= f.label :primary_city %>
    <%= f.text_field :primary_city %>
  </div>
  <div class="field">
    <%= f.label :alt_city %>
    <%= f.text_field :alt_city %>
  </div>
  <div class="field">
    <%= f.label :primary_postal_code %>
    <%= f.text_field :primary_postal_code %>
  </div>
  <div class="field">
    <%= f.label :alt_postal_code %>
    <%= f.text_field :alt_postal_code %>
  </div>
  <div class="field">
    <%= f.label :primary_province_id %>
    <%= f.collection_select :primary_province_id, Province.all, :id, :name, { include_blank: true } %>
  </div>
  <div class="field">
    <%= f.label :alt_province_id %>
    <%= f.collection_select :alt_province_id, Province.all, :id, :name, { include_blank: true } %>
  </div>

  <div class="actions">
    <%= f.submit 'Update', class: 'button is-primary' %>
  </div>
<% end %>
